<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "https://png.pngtree.com/png-vector/20190925/ourlarge/pngtree-tiger-face-logo-png-image_1743050.jpg" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item active">
          <strong><%= link_to "Animals", animals_path, class: "nav-link" %></strong>
        </li>
        <li class="nav-item active">
          <strong><%= link_to "New Listing", new_animal_path, class: "nav-link" %></strong>
        </li>
        <li class="nav-item">
          <strong><%= link_to "Bookings", bookings_path, class: "nav-link" %></strong>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <strong><%= link_to "Roars", "https://gamingsection.net/wp-content/uploads/2022/03/Is-Lions-Roar-good-for-Keqing.jpg", class: "nav-link" %></strong>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag (current_user.photo.attached? ? cl_image_path(current_user.photo.key) : "https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png"), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "My Listings", owner_animals_path, class: "dropdown-item" %>
              <%= link_to "Client Bookings", owner_bookings_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <strong><%= link_to "Login", new_user_session_path, class: "nav-link" %></strong>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
