<div class="banner" style="background-image: url(https://www.rspca.org.uk/webContent/staticImages/SectionImages/ExoticPets.jpg);">
  <div class="container">
    <h1><strong>Your Bookings</strong></h1>
    </div>
  </div>
</div>

<div class="container">
  <% @bookings.each do |booking| %>
  <div class="card-product mt-3 mb-4">
      <img src='<%= booking.animal.photo.attached? ? cl_image_path(booking.animal.photo.key) : "https://mycountrysidevet.com/wp-content/uploads/2018/08/shutterstock_1043006710.jpg" %>' />
      <div class="card-product-infos">
        <h2>Name: <%= booking.animal.name %></h2>
        <h2>Status: <%= booking.status.capitalize %></h2>
        <h2>Start date: <%= booking.start_date %></h2>
        <h2>End date: <%= booking.end_date %></h2>
        <%= link_to edit_booking_path(booking) do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <%= link_to "ðŸ—‘", booking_path(booking), class: 'card-remove-link', method: :delete, data: { confirm: "Are you sure you'd like to remove this booking?" } %>
  </div>
  <% end %>
</div>

<div class="container">
  <h2 class="mt-5">Where booked animals are located</h2>
  <div class="cards" style="width: 100%; height: 600px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
